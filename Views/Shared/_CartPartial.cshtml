@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject CartService _cartService;


@{
    var cart = _cartService.GetCartItems();
    if (cart.Count > 0) {
        <div class="nav-item"><a class="text-warning" asp-route="cart"><i class="fa-regular fa-cart-shopping"></i>(@cart.Count)</a></div>
         
    }
}